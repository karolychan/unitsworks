{{> header }}
  <div class="row">
    <div class="col-md-6 col-md-offset-4">
      <form  action="/registro/pessoa-fisica" method="post">
        <div class="input-group">
          <label for="">E-mail</label>
          <input type="email" required name="email" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Senha</label>
          <input type="password"  required name="password" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Nome</label>
          <input type="text"required  name="name" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Sexo</label>
          <select class="form-control" name="">
            <option value="">--SELECIONE--</option>
            <option value="female">Feminina</option>
            <option value="male">Masculino</option>
          </select>
        </div>
        <div class="input-group">
          <label for="">CEP</label>
          <input type="text" required id="cep" name="cep" maxlength="8" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Endereço</label>
          <input type="text" id="endereco" name="street" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Número</label>
          <input type="text" name="placeNumber" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Cidade</label>
          <input type="text"id="cidade" name="city" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Estado</label>
          <input type="text" id="estado" name="state" class="form-control" value="">
        </div>
        <div class="input-group">
          <label for="">Bairro</label>
          <input type="text" id="bairro" name="neighborhood" class="form-control" value="">
        </div>
        <input type="hidden" name="type" value="PERSON">
        <br>
        <input type="submit" name="Entrar" value="Entrar" class="btn btn-warning">
      </form>
    </div>
  </div>

<script type="text/javascript">
$( "#cep" ).change(function() {
  $.getJSON("//viacep.com.br/ws/"+ $(this).val() +"/json/?callback=?", function(dados) {
       if (!("erro" in dados)) {
         console.log(dados);
           $("#endereco").val(dados.logradouro);
           $("#bairro").val(dados.bairro);
           $("#cidade").val(dados.localidade);
           $("#estado").val(dados.uf);
       } //end if.
       else {
           alert("CEP não encontrado.");
           $("#endereco").val("");
           $("#bairro").val("");
           $("#cidade").val("");
           $("#estado").val("");
           $("#cep").val("");
       }
   });
});
</script>

{{> footer }}
